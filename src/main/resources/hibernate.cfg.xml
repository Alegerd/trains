    <mapping class="alegerd.trains.entities.station.StationsEntity"/>
    <mapping class="alegerd.trains.entities.timetable.TimetableEntity"/>
    <mapping class="alegerd.trains.entities.train.TrainsEntity"/>
      <mapping class="alegerd.trains.entities.station.StationsEntity"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>